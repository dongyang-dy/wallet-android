<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_balance_top"
    android:layout_width="match_parent"
    android:layout_height="372dp"
    android:background="@mipmap/bg_balance_index"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <!--
    <com.bhex.lib.uikit.widget.StatusBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_hbtc_wallet"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_testnet"
            android:layout_marginStart="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Testnet"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>

        </FrameLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_main_text_color"
            android:drawableEnd="@mipmap/ic_black_arrow"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textStyle="bold"
            tools:text="Acicii"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_add_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_wallet"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <com.bhex.lib.uikit.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@mipmap/bg_balance_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="46dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_wallet_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9FB5DC"
                tools:text="HBCc0J0aâ€¦097d4f41"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_wallet_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_balance_qr"
                android:layout_marginStart="4dp"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="@string/all_asset"
            android:textColor="@color/white_60"
            android:layout_marginStart="46dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_asset"
            android:layout_width="wrap_content"
            android:layout_height="36sp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:layout_marginStart="35dp"
            android:textColor="@color/white"
            tools:text="$172612.0337"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_transfer_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_transfer_out_index"
                android:layout_marginEnd="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_transfer_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_transfer_in_index"
                android:layout_marginEnd="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_entrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_entrust"
                android:layout_marginEnd="20dp"
                />

        </LinearLayout>
    </com.bhex.lib.uikit.widget.layout.XUILinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_index"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_token_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_default_coin"
        android:layout_gravity="center_horizontal"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_token_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hbtc_chain_address"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/global_main_text_color"
        android:layout_gravity="center_horizontal"/>

    <com.bhex.lib.uikit.widget.layout.XUILinearLayout
        android:id="@+id/layout_token_address"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:minWidth="150dp"
        android:layout_marginBottom="22dp"
        android:layout_gravity="center_horizontal"
        android:background="#1F98C1FF"
        app:xui_radius="20dp"
        app:xui_borderColor="#1F4299FF"
        app:xui_borderWidth="1dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_token_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#4299FF"
            android:textSize="14sp"
            tools:text="HBCiay79...34e26XYS"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:background="#C7D3E4"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_qr_code_blue"
            android:layout_gravity="center_vertical"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_arrow_down_blue_a"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            />
        

    </com.bhex.lib.uikit.widget.layout.XUILinearLayout>

    <com.bhex.lib.uikit.widget.layout.XUILinearLayout
        android:id="@+id/layout_token_address_make"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="22dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center_horizontal"
        android:background="#1F98C1FF"
        app:xui_radius="20dp"
        app:xui_borderColor="#1F4299FF"
        app:xui_borderWidth="1dp"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_make_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#4299FF"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:text="@string/create_crosslink_deposit_address"
            android:drawableEnd="@mipmap/ic_arrow_right_blue"
            />

    </com.bhex.lib.uikit.widget.layout.XUILinearLayout>

</LinearLayout>
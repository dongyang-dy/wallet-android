<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TrusteeshipSuccessActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
        app:titleTextAppearance="@style/Toolbar_textsize">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/toolbar_layout_title_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/password_create_success"
            tools:text="@string/password_create_success" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_index_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_trust_right" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/password_create_success"
            android:textColor="@color/global_main_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_index_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/main_padding_left"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/main_padding_right"
        android:layout_marginBottom="32dp"
        android:background="@drawable/frame_gray"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_index_1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/main_padding_left"
                android:paddingEnd="@dimen/main_padding_left">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/tips_backup"
                    android:textColor="@color/global_main_text_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:drawablePadding="5dp"
                    android:lineSpacingExtra="@dimen/main_line_spacing_extra"
                    android:text="@string/tips_trust_success_index_1"
                    android:textColor="@color/secondary_tip_text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/tips_trust_success_index_2"
                    android:textColor="@color/secondary_tip_text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:drawablePadding="5dp"
                    android:lineSpacingExtra="@dimen/main_line_spacing_extra"
                    android:text="@string/tips_trust_success_index_3"
                    android:textColor="@color/secondary_tip_text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:lineSpacingExtra="@dimen/main_line_spacing_extra"
                    android:text="@string/tips_trust_success_index_4"
                    android:textColor="@color/secondary_tip_text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/tips_our_suggestion"
                    android:textColor="@color/global_main_text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/main_line_spacing_extra"
                    android:text="@string/tips_trust_success_index_5"
                    android:textColor="@color/secondary_tip_text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/main_line_spacing_extra"
                    android:text="@string/tips_trust_success_index_6"
                    android:textColor="@color/secondary_tip_text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/main_line_spacing_extra"
                    android:text="@string/tips_trust_success_index_7"
                    android:textColor="@color/secondary_tip_text_color"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_later_backup"
            style="@style/secondary_button"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/main_margin_left"
            android:layout_weight="1"
            android:text="@string/later_backup" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_at_once_backup"
            style="@style/main_btn_style"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/main_margin_left"
            android:layout_weight="1"
            android:text="@string/at_once_backup" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
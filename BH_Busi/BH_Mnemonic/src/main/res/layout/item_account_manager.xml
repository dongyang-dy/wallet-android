<?xml version="1.0" encoding="utf-8"?>
<com.bhex.lib.uikit.widget.layout.XUILinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@color/card_bg_color"
    android:layout_marginStart="@dimen/main_margin_left"
    android:layout_marginEnd="@dimen/main_margin_left"
    android:padding="16dp"
    app:xui_radius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textColor="@color/global_main_text_color"
            android:textSize="15sp"
            android:gravity="center_vertical"
            tools:text="Acicii"/>

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_toRightOf="@+id/tv_wallet_name"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:background="@color/v_line_divider_color"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wallet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_wallet_name"
            android:layout_marginStart="17dp"
            android:textColor="@color/global_main_gray_color"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            tools:text="HBCu4ser…a4mp6lfo"
            android:layout_toLeftOf="@+id/iv_wallet_check"
            android:layout_marginEnd="4dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_wallet_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_account_checked"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wallet_asset"
        android:layout_marginTop="10dp"
        android:textColor="@color/global_main_gray_color"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/global_main_text_color"
        android:textSize="14sp"
        tools:text="￥12345.67"
        />


</com.bhex.lib.uikit.widget.layout.XUILinearLayout>
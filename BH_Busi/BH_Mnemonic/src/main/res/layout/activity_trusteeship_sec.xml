<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.activity.TrusteeshipSecActivity">

    <include layout="@layout/layout_toolbar"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_index_1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:paddingStart="24dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:text="@string/set_password"
        android:textColor="@color/global_main_text_color"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="8dp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_index_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_index_1"
        android:text="@string/setup_2_to_3"
        android:includeFontPadding="false"
        android:textColor="@color/global_label_text_color"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_index_1"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_index_1"
        android:layout_marginTop="8dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/set_pwd_tip_1"
            android:drawablePadding="5dp"
            android:layout_marginLeft="3dp"
            android:lineSpacingExtra="5dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/set_pwd_tip_2"
            android:drawablePadding="5dp"
            android:layout_marginLeft="3dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="3dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/set_pwd_tip_3"
            android:drawablePadding="5dp"
            android:layout_marginLeft="3dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="3dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="24dp"
            android:textColor="@color/global_secondary_text_color"
            android:layout_marginBottom="4dp"
            android:text="@string/wallet_password"
            />

        <com.bhex.lib.uikit.widget.InputView
            android:id="@+id/inp_wallet_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textType="2"
            app:hint="@string/set_pwd_hint"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_password_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_gravity="right"
            android:textColor="@color/global_label_text_color"
            tools:text="@string/pwd_index"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pwd_tips_0"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/pwd_rule_tip"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pwd_tips_1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/pwd_rule_tip_1"
            android:drawablePadding="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pwd_tips_2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/pwd_rule_tip_2"
            android:drawablePadding="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pwd_tips_3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/pwd_rule_tip_3"
            android:drawablePadding="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pwd_tips_4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/secondary_tip_text_color"
            android:textSize="@dimen/sp_15"
            android:text="@string/pwd_rule_tip_4"
            android:drawablePadding="5dp"
            android:layout_marginLeft="3dp"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            style="@style/main_btn_style"
            android:text="@string/next"
            android:enabled="false"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
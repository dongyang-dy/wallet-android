<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/main_padding_left"
    android:paddingEnd="@dimen/main_padding_right">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin_top">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_account_confirm"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/global_main_text_color"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_delete_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/tip_delete_wallet"
        android:textColor="@color/global_third_text_color"
        android:gravity="left"
        android:paddingBottom="@dimen/main_padding_bottom"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inp_password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColorHint="@color/global_input_hint_color"
        android:background="@null"
        android:textSize="14sp"
        android:inputType="numberPassword"
        android:hint="@string/input_delete_account_hint"
        android:layout_marginEnd="4dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/global_divider_color"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/main_btn_style"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="26dp"
        android:text="@string/delete"
        android:enabled="false"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:selectableItemBackground"
    android:paddingStart="@dimen/main_padding_left"
    android:paddingEnd="@dimen/main_padding_right"
    android:layout_height="@dimen/recycler_item_default_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/global_main_text_color"
        android:textSize="15sp"
        tools:text="备份助记词"
        />


    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        tools:visibility="visible"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_main_gray_color"
            android:textSize="12sp"
            tools:text="v1.0.0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_remind"
            android:layout_width="8dp"
            android:layout_height="8dp"
            tools:background="@color/alarm_highlight_text_color"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"/>


    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_gray_arrow"
        />




</RelativeLayout>
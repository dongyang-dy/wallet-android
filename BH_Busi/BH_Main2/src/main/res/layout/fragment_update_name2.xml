<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/main_padding_left"
    android:paddingRight="@dimen/main_padding_right"
    tools:context=".my.ui.fragment.UpdateName2Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_name"
            android:textColor="@color/global_main_text_color"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_close"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inp_wallet_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="请输入名称"
            android:textColorHint="@color/global_main_gray_color"
            android:textColor="@color/global_main_text_color"
            android:textSize="14sp"
            android:maxLines="1"
            android:background="@color/app_bg"
            android:layout_marginEnd="4dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/global_divider_color"/>

    </LinearLayout>

    <!--<com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </com.google.android.material.textfield.TextInputLayout>-->


    <!--
    <com.bhex.lib.uikit.widget.button.RoundButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="#FFFFFFF"
        android:text="@string/sure"
        app:rb_backgroundColor="@color/highlight_text_color"
        app:rb_radius="@dimen/main_radius_conner"
        />
      -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:layout_marginBottom="@dimen/main_margin_bottom"
        style="@style/main_material_btn"
        android:enabled="true"
        app:backgroundTint="@color/global_button_bg_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="6dp"
        android:text="@string/sure"
        />
</LinearLayout>